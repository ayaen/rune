class Foo(self) {
}

class Bar(self, name: string) {
  self.name = name

  func new(foo: Foo, name: string) -> Bar {
    newBar = Bar(name)
    oldBar = foo.findBar(newBar)
    if !isnull(oldBar) {
      newBar.destroy()
      return oldBar
    }
    foo.insertBar(newBar)
    return newBar
  }

  func hash(self) -> u64 {
    return hashValue(self.name)
  }

  func equals(self, other) {
    return self.name == other.name
  }
}

relation HashedClass Foo Bar cascade

foo = Foo()

// Basic check.
bob = Bar.new(foo, "Bob")
newBob = Bar.new(foo, "Bob")
assert newBob == bob
alice = Bar.new(foo, "Alice")
for bar in foo.bars() {
  println bar.name
}
bob.destroy()
for bar in foo.bars() {
  println bar.name
}
alice.destroy()
assert foo.numBars == 0

// Insert entries.
numEntries = 100
for i in range(numEntries) {
  name = "bar%u" % i
  Bar.new(foo, name)
}

// Delete some randomly.
for bar in foo.safeBars() {
  if hashValue(bar.hash()) & 0x1 == 0 {
    bar.destroy()
  }
}

// Insert more entries.
for i in range(numEntries) {
  name = "baz%u" % i
  Bar.new(foo, name)
}

// Check the table.
foo.checkBarTable()
println "passed"
